<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/grey"/> <!-- Warna abu-abu terang -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Shadow effect (if supported) -->
    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
    <size android:width="200dp" android:height="56dp" />

    <!-- Optional: Add an elevation shadow for devices with API 21+ -->
    <stroke android:width="1dp" android:color="@color/grey" /> <!-- Garis abu-abu di sekitar -->
</shape>
