<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Rounded Shape -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color abu-abu terang -->
            <solid android:color="@color/grey" />
            <!-- Rounded corners -->
            <corners android:radius="16dp" />
            <!-- Border -->
            <stroke android:width="1dp" android:color="@color/grey" />
            <!-- Set padding untuk menghindari isi yang terlalu dekat -->
            <padding android:left="8dp" android:right="8dp" android:top="12dp" android:bottom="12dp" />
        </shape>
    </item>

    <!-- Icon Dropdown (Kanan) -->
    <item android:drawable="@android:drawable/arrow_down_float" android:right="16dp" android:gravity="end|center_vertical" />
</layer-list>
